<Page x:Class="PointOfSale.MenuCategorySelection"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PointOfSale"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MenuCategorySelection">

    <!--<Grid Width="550" HorizontalAlignment="Left" Margin="0 30 0 0">-->
        
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Button Grid.Row="0" Grid.Column="0" Width="100" Height="100" Margin="50 50 50 50" Click="ComboClick">Combo</Button>
            <Button Grid.Row="0" Grid.Column="1" Width="100" Height="100" Margin="50 50 50 50">Entrees</Button>
            <Button Grid.Row="1" Grid.Column="0" Width="100" Height="100" Margin="50 50 50 50">Drinks</Button>
            <Button Grid.Row="1" Grid.Column="1" Width="100" Height="100" Margin="50 50 50 50">Sides</Button>
        </Grid>
    <!--</Grid>-->
</Page>
